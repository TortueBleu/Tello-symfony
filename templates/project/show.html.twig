{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ project.timestamp ? project.timestamp|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>

        {% for list in project.getAreas() %}
            <p>{{ list.name }}</p>
            {% for card in list.getCards() %}
               <a href="{{ path('card_edit', {'id': card.id}) }}">{{ card.name }}</a>
            {% endfor %}
        {% endfor %}
    </table>

    <a href="{{ path('project_index') }}">back to list</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
